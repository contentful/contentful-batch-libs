{
  "name": "contentful-batch-libs",
  "description": "Library modules used by contentful batch utility CLI tools.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && babel lib --out-dir .",
    "clean": "npm run clean:build && rimraf coverage",
    "clean:build": "rimraf *.js utils get push transform",
    "prepublish": "npm run build",
    "postpublish": "npm run clean",
    "pretest": "standard lib",
    "test": "npm run test:cover",
    "test:cover": "BABEL_ENV=test isparta cover test/runner",
    "test:only": "BABEL_ENV=test ./test/runner",
    "browser-coverage": "npm run test:cover && opener coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "babel-polyfill": "^6.0.16",
    "bluebird": "^3.0.5",
    "contentful": "^1.2.0",
    "contentful-management": "^0.7.1",
    "lodash": "^3.10.1",
    "npmlog": "^2.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-core": "^6.3.21",
    "babel-eslint": "^4.1.3",
    "babel-plugin-rewire": "^0.1.22",
    "cz-conventional-changelog": "^1.1.4",
    "isparta": "^3.5.3",
    "mkdirp": "^0.5.1",
    "opener": "^1.4.1",
    "require-all": "^2.0.0",
    "rimraf": "^2.4.3",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.2",
    "standard": "^5.3.1",
    "tape": "^4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contentful/contentful-batch-libs.git"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "contentful",
    "batch"
  ],
  "author": "Tiago Rodrigues <tiago@contentful.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/contentful/contentful-batch-libs/issues"
  },
  "homepage": "https://github.com/contentful/contentful-batch-libs#readme"
}
